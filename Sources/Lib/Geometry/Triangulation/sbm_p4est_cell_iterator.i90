  class(vef_iterator_t),   intent(inout) :: vef
  assert ( this%get_gid() >= 1 .and. .not. this%has_finished() )
  call vef%set_gid(this%get_vef_gid(vef_lid))
end subroutine p4est_cell_iterator_get_vef

